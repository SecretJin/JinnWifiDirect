<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.ProfileActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name:"
        android:id="@+id/nameText"
        android:layout_marginTop="89dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/nameTextView"
        android:layout_toStartOf="@+id/nameTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Annonymous"
        android:id="@+id/nameTextView"
        android:layout_gravity="left"
        android:layout_alignTop="@+id/nameText"
        android:layout_toRightOf="@+id/gender"
        android:layout_toEndOf="@+id/gender" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email:"
        android:id="@+id/email"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/nameText"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gender:"
        android:id="@+id/gender"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description:"
        android:id="@+id/textView13"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/gender"
        android:layout_toLeftOf="@+id/descTextView"
        android:layout_toStartOf="@+id/descTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/emailTextView"
        android:layout_gravity="left"
        android:layout_alignTop="@+id/email"
        android:layout_toRightOf="@+id/email"
        android:layout_toEndOf="@+id/email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/genderTextView"
        android:layout_gravity="left"
        android:text="Unknown"
        android:layout_above="@+id/textView13"
        android:layout_toRightOf="@+id/gender"
        android:layout_toEndOf="@+id/gender" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/descTextView"
        android:layout_gravity="left"
        android:layout_alignTop="@+id/textView13"
        android:layout_toRightOf="@+id/yourProfileTextView"
        android:layout_toEndOf="@+id/yourProfileTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Profile"
        android:id="@+id/yourProfileTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
